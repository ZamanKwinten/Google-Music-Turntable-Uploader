{
    "manifest_version": 2,

    "name": "Google Music to Turntable",
    "version": "1.0",

    "description": "This extension allows you to easily upload to turntable.fm from Google Music.",

    "page_action": {
        "default_title": "Google Music to Turntable"
    },

    "background": {
        "scripts": ["jquery-1.9.1.min.js", "background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["http://turntable.fm/*"],
            "js": ["jquery-1.9.1.min.js", "DataTables-1.9.4/media/js/jquery.dataTables.js", "turntable.js"],
            "css": ["DataTables-1.9.4/media/css/jquery.dataTables.css"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "turntable_inject.js",
        "DataTables-1.9.4/media/js/jquery.dataTables.js"
    ],

    "minimum_chrome_version": "22",

    "permissions": [
        "http://turntable.fm/*",
        "*://*.google.com/*",
        "http://*.googleusercontent.com/*",
        "cookies",
        "storage",
        "tabs"
    ]
}
